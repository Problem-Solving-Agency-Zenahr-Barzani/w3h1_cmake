package C++_Main_DIR <<./src/>> as cxx_main {
    package add_executable <<...>> {
        rectangle main_125 <<Target Executable Name>> as main_125
        rectangle main.cxx <<Source Name>> as main_cxx
    }
    main_125 *-right-> main_cxx
